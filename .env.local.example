# MultiStream Chat - Environment Variables Template
# Copy this file to .env.local and fill in your OAuth credentials

# TWITCH OAUTH CONFIGURATION
# Get these from: https://dev.twitch.tv/console
# Redirect URI: http://localhost:3000/login
VITE_TWITCH_CLIENT_ID=your_twitch_client_id_here
VITE_TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
VITE_TWITCH_REDIRECT_URI=http://localhost:3000/login

# KICK OAUTH CONFIGURATION  
# Get these from: https://kick.com/developers
# Redirect URI: http://localhost:3000/login
VITE_KICK_CLIENT_ID=your_kick_client_id_here
VITE_KICK_CLIENT_SECRET=your_kick_client_secret_here
VITE_KICK_REDIRECT_URI=http://localhost:3000/login

# PRODUCTION CONFIGURATION
# For production: https://yourdomain.com/login
